    .l-main__intro
      h1.intro__title FRANCOIS CORON
      h2.intro__subtitle Web Designer &amp; Développeur Front-End basé à lyon.

    .l-main__works

      .works__grid--left
        .works__grid--bloc.jeanseu
          a.works__grid--caption(href="/projets/jean-seu/" title="Jean Seu")
